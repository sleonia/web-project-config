{
    "compilerOptions": {
        "jsx": "react",
        "baseUrl": "./",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "noFallthroughCasesInSwitch": true,
        "strictFunctionTypes": true,
		"typeRoots": [
			"node_modules/@types",
			"types"
		]
    },
    "include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"stub/**/*.ts",
		"types/*.d.ts"
	],
    "exclude": [ "node_modules" ]
}
